{% extends 'layout.twig' %}

{% block body %}
    <div class="content_wrap">
        <div class="content">
            <form method="post" action="/basket/buy">
                <input type="hidden" name="step" value="payment">
                <input type="hidden" name="address" value="{{ address }}">
                <input type="hidden" name="surname" value="{{ surname }}">
                <input type="hidden" name="name" value="{{ name }}">
                <input type="hidden" name="middlename" value="{{ middlename }}">
                <input type="hidden" name="phone" value="{{ phone }}">
                <input type="text" name="card_number" placeholder="номер карты" pattern="[0-9]{16}" required><br>
                <input type="text" name="card_validity" placeholder="Срок действия" pattern="[0-9]{2}.[0-9]{2}" required><br>
                <input type="text" name="card_owner" placeholder="Владелец" requiredll><br>
                <input type="text" name="card_code" placeholder="CVV" pattern="[0-9]{3}" required><br>
                <input type="submit" value="Оплатить">
            </form>
        </div>
    </div>
{% endblock %}
