<div class="vc_row wpb_row vc_row-fluid">
    <div class="wpb_column vc_column_container vc_col-sm-12">
        <div class="vc_column-inner">
            <div class="wpb_wrapper">
                <h2 class="sc_title sc_title_underline sc_align_center margin_bottom_tiny"
                    style="margin-top: 1.15em;text-align:center;">
                    <em>Найдите</em> свою следующую книгу
                </h2>
                <script type="text/javascript">
                    function activate(tag) {
                        jQuery('.sc_tabs_title').removeClass('ui-state-active');
                        jQuery('#'+ tag).addClass('ui-state-active');
                        jQuery('.sc_tabs_content').hide();
                        jQuery('.' + tag + '_panel').show();
                    }

                    jQuery(document).ready(function ($) {
                        jQuery('.sc_tabs_title').on('click', function () {
                            activate(this.id);
                        });
                    });
                </script>
                <div
                     class="sc_tabs sc_tabs_style_2 inited ui-tabs ui-corner-all ui-widget ui-widget-content"
                     data-active="0">
                    <ul class="sc_tabs_titles ui-tabs-nav ui-corner-all ui-helper-reset ui-helper-clearfix ui-widget-header"
                        role="tablist">
                        {% for list in lists %}
                            {% if loop.first %}
                                {% include './tab_item.twig'  with {title:list.title,tag:list._id, 'active':true} %}
                            {% else %}
                                {% include './tab_item.twig'  with {title:list.title,tag:list._id} %}
                            {% endif %}
                        {% endfor %}
                    </ul>
                    <style>
                        .list-item-wrap {
                            margin-right: 2em;
                        }
                    </style>
                    {% for list in lists %}
                        <div {% if loop.first %}style="display: block"{% endif %}
                             class="{{ list._id }}_panel sc_tabs_content ui-tabs-panel ui-corner-bottom ui-widget-content"
                        ><!--
                            {% for book in list.books %}
                                -->
                            <div class="list-item-wrap">
                                {% include './content_item.twig' with book %}
                            </div><!--
                            {% endfor %}
                    --></div>
                    {% endfor %}
                </div>
            </div>
            <a href="/shop"
               class="sc_button sc_button_square sc_button_style_filled sc_button_size_small aligncenter margin_top_medium margin_bottom_large"
               style="width:190px;">Найти больше</a></div>
    </div>
</div>
</div>