<div class="vc_row wpb_row vc_row-fluid">
    <div class="wpb_column vc_column_container vc_col-sm-12">
        <div class="vc_column-inner">
            <div class="wpb_wrapper">
                <h2 class="sc_title sc_title_underline sc_align_center margin_bottom_tiny"
                    style="margin-top: 1.15em;text-align:center;">
                    <em>Discover</em> Your Next Books
                </h2>
                <script type="text/javascript">
                    function activate(name){
                        jQuery('.sc_tabs_title').removeClass('ui-state-active');
                        jQuery('.' + name + '_tab').addClass('ui-state-active');
                        jQuery('.sc_tabs_content').hide();
                        jQuery('.' + name + '_panel').show();
                    }
                    jQuery(document).ready(function($) {
                        $('.new_releases_tab').on('click',function () {
                            activate('new_releases');
                        });
                        $('.coming_soon_tab').on('click',function () {
                            activate('coming_soon');
                        });
                        $('.best_sellers_tab').on('click',function () {
                            activate('best_sellers');
                        });
                        $('.award_winners_tab').on('click',function () {
                            activate('award_winners');
                        });
                    });
                </script>
                <div id="sc_tabs_2044179562"
                     class="sc_tabs sc_tabs_style_2 inited ui-tabs ui-corner-all ui-widget ui-widget-content"
                     data-active="0">
                    <ul class="sc_tabs_titles ui-tabs-nav ui-corner-all ui-helper-reset ui-helper-clearfix ui-widget-header"
                        role="tablist">
                        {% include 'partials/index/discover/tab_item.twig'  with {title:"NEW RELEASES",'tag':'new_releases', 'tabindex':0, 'href':'http://booklovers.ancorathemes.com/#sc_tab_1456822345_1_17', 'active':true} %}<!--
                        -->
                        {% include 'partials/index/discover/tab_item.twig' with {title:'COMING SOON','tag':'coming_soon','tabindex':-1,'href':'http://booklovers.ancorathemes.com/#sc_tab_1456822345_2_72'} %}<!--
                        -->
                        {% include 'partials/index/discover/tab_item.twig' with {title:'BEST SELLERS','tag':'best_sellers','tabindex':-1,'href':'http://booklovers.ancorathemes.com/#sc_tab_1456822446659_6'} %}<!--

                        -->{% include 'partials/index/discover/tab_item.twig' with {title:'AWARD WINNERS','tag':'award_winners', 'tabindex':-1,'href':'http://booklovers.ancorathemes.com/#sc_tab_1456822448754_7'} %}
                    </ul>
                    <style>
                        .list-item-wrap{
                            margin-right: 2em;
                        }
                    </style>
                    <div id="sc_tab_1456822345_1_17"
                         class="sc_tabs_content new_releases_panel ui-tabs-panel ui-corner-bottom ui-widget-content"
                          style="display: block;"><!--
                            {% for book in new_releases %}
                                --><div class="list-item-wrap">
                                    {% include 'partials/index/discover/content_item.twig' with book %}
                                </div><!--
                            {% endfor %}
                    --></div>
                    <div id="sc_tab_1456822345_2_72"
                         class="sc_tabs_content coming_soon_panel ui-tabs-panel ui-corner-bottom ui-widget-content" style="display: none;"><!--
                            {% for book in coming_soon %}
                            --><div class="list-item-wrap">
                                {% include 'partials/index/discover/content_item.twig' with book %}
                            </div><!--
                            {% endfor %}
                        --></div>
                    </div>
                    <div id="sc_tab_1456822446659_6"
                         class="sc_tabs_content best_sellers_panel ui-tabs-panel ui-corner-bottom ui-widget-content" style="display: none;"><!--
                            {% for book in best_sellers %}
                            --><div class="list-item-wrap">
                                {% include 'partials/index/discover/content_item.twig' with book %}
                            </div><!--
                            {% endfor %}
                        --></div>
                    </div>
                    <div id="sc_tab_1456822448754_7"
                         class="sc_tabs_content award_winners_panel ui-tabs-panel ui-corner-bottom ui-widget-content" style="display: none;"><!--
                            {% for book in award_winners %}
                            --><div class="list-item-wrap">
                                {% include 'partials/index/discover/content_item.twig' with book %}
                            </div><!--
                            {% endfor %}
                        --></div>
                    </div>
                </div>
                <a href="/shop"
                   class="sc_button sc_button_square sc_button_style_filled sc_button_size_small aligncenter margin_top_medium margin_bottom_large"
                   style="width:190px;">DISCOVER MORE BOOKS</a></div>
        </div>
    </div>
</div>