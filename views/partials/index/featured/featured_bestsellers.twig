<div class="vc_row wpb_row vc_row-fluid">
    <div class="wpb_column vc_column_container vc_col-sm-12">
        <div class="vc_column-inner">
            <div class="wpb_wrapper">
                <div class="columns_wrap sc_columns columns_nofluid sc_columns_count_3 home1-block7 margin_top_large margin_bottom_huge" style="margin:auto auto;">
                    <div class="column-1_2 sc_column_item sc_column_item_1 odd first span_2" style="padding-left:10em;">
                        <h6 class="sc_title sc_title_underline sc_align_left"
                            style="text-align:left;">FEATURED BESTSELLERS</h6>
                        <div class="sc_section column-5_11" style="display: inline-block;width:300px;">
                            <div class="sc_section_inner">
                                <figure class="sc_image  sc_image_shape_square"
                                        style=" box-shadow: 0px 3px 10px 0px #adadab; -webkit-box-shadow: 0px 3px 10px 0px #adadab; ">
                                    <img src="/img/{{ best.img }}"
                                         alt=""></figure>
                            </div>
                        </div>
                        <div class="sc_section column-5_11" style="display: inline-block;vertical-align: top;margin-left: 3em;">
                            <div class="sc_section_inner"><h4
                                    class="sc_title sc_title_regular margin_bottom_tiny"
                                    style="margin-top: -0.34em;">Let the sun shine</h4>
                                <div class="wpb_text_column wpb_content_element ">
                                    <div class="wpb_wrapper">
                                        <p><span
                                                style="color: #de3241;"><strong>Author:</strong></span>
                                            {{best.firstname}} {{ best.lastname }}</p>
                                        <p>{{ best.info }}</p>
                                        <p>Price: <strong><span
                                                style="color: #de3241; font-size: 1.471em;">${{ best.price // 100 }}.{{ best.price % 100 }}</span></strong>
                                        </p>
                                    </div>
                                </div>
                                <a href="/shop/{{ best.book_id }}"
                                   class="sc_button sc_button_square sc_button_style_filled sc_button_size_small margin_top_large">more
                                    info</a></div>
                        </div>
                    </div><!--
                    --><div class="column-1_2 sc_column_item sc_column_item_3 odd after_span_2"
                         style="padding-left: 5.5em;">
                        <div class="wpb_widgetised_column wpb_content_element">
                            <div class="wpb_wrapper">

                                <aside id="woocommerce_products-2"
                                       class="widget_number_1 widget woocommerce widget_products">
                                    <h5 class="widget_title">Whatâ€™s new?</h5>
                                    <ul class="product_list_widget">
                                        {% for item in news %}
                                            {% include 'partials/index/featured/item.twig' with item %}
                                        {% endfor %}
                                    </ul>
                                </aside>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>