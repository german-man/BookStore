<div class="isotope_item isotope_item_products isotope_item_products_6 isotope_column_6 isotope_item_show"
     style="display:inline-block; vertical-align: top">
    <div class="post_item post_item_products post_item_products_6			 post_format_standard odd">
        <div class="post_featured">
            <div class="post_thumb"
                 data-image="http://booklovers.ancorathemes.com/wp-content/uploads/2016/04/book1.jpg"
                 data-title="Let the sun shine">
                <a class="hover_icon hover_icon_link"
                   href="{{href}}"><img
                        class="wp-post-image" width="320"
                        height="520" alt="Let the sun shine"
                        src="{{img}}"></a>
            </div>
        </div>
        <div class="post_content isotope_item_content">
            <h5 class="post_title"><a
                    href="{{href}}">{{title}}</a></h5>
            <div class="post_descr">
                <div class="author_name">
                    {{author}}
                </div>
                <div class="star-rating"
                     title="Rated 0 out of 5">
                            <span style="width:0%">
                                <strong itemprop="ratingValue" class="rating">0</strong> out of <span itemprop="bestRating">5</span>							based on <span
                                    itemprop="ratingCount" class="rating">0</span> customer ratings						</span>
                </div>
                <div class="reviews_count">
                    0 Reviews
                </div>


            </div>

        </div>                <!-- /.post_content -->
    </div>    <!-- /.post_item -->
</div>