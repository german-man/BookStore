{% extends '../admin_layout.twig' %}

{% block main %}
<h3>Добавление новой книги</h3>
    <div class="wrap">
        <form class="fields_wrap" method="post" action="/admin/books/add" enctype="multipart/form-data">
            <label class="field">Название</label>
            <input class="field_wrap" type="text" name="title"  placeholder="Только буквы и цифры" required>
            <label class="field">Цена</label>
            <input class="field_wrap" type="text" name="price"  pattern="(\d+)|(\d+.\d{1,2})" placeholder="0.0"/>
            <label class="field">ISBN</label>
            <input class="field_wrap" type="text" name="isbn" pattern="\d{13}" placeholder="13:цифр"/>
            <label class="field" for="genres">Жанры</label>
            <select class="field_wrap" name="genres" multiple required>
                    {% for genre in genres %}
                        <option value="{{ genre._id }}">{{ genre.title }}</option>
                    {% endfor %}
                </select>
            <label class="field">Авторы</label>
            <select class="field_wrap" name="authors" multiple required>
                    {% for author in authors %}
                        <option value="{{ author._id }}">{{ author.firstname }} {{ author.lastname }}</option>
                    {% endfor %}
            </select>
            <label class="field">Изображение</label>
            <input class="field_wrap" type="file" name="filedata" required>
            <label class="field">Описание</label>
            <textarea class="field field_wrap book_description" name="description" placeholder="Описание:"></textarea>
            <label class="field"><input type="submit"></label>
        </form>
    </div>
{% endblock %}