{% extends '../admin_layout.twig' %}

{% block main %}
    <div>
        <div class="fields_wrap ">
            <div class="field">Для: <a href="/admin/books/{{ book_id }}">{{ title }}</a></div>
            <div class="field">Кем: <a href="/admin/users/{{ user_id }}">{{ username }}</a></div>
            <div class="field">Рейтинг: {% if raiting is null %}<span>☆☆☆☆☆</span>{% else %}
                    <span>{% for i in range(1, raiting) %}★{% endfor %}{% for i in range(1, 5 - raiting) %}☆{% endfor %}</span>{% endif %}
            </div>
            <div class="field">{{ text }}</div>
            {% if status == 1 %}
            <div class="field">
                <form method="post" action="/admin/reviews/{{ review_id }}/approve"><input type="submit"
                                                                                           value="Одобрить"></form>
            </div>
            <div class="field">
                <form method="post" action="/admin/reviews/{{ review_id }}/reject">
                    <input type="text" name="cause"/>
                    <input type="submit" value="Отклонить"></form>
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}