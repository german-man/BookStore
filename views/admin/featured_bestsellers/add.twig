{% extends '../admin_layout.twig' %}

{% block main %}
    {% if books is empty %}
        <h1>Нечего добавлять</h1>
    {% else %}
        <form method="post" action="/admin/featured_bestsellers/add">
            <select name="book_id" required>
                {% for book in books %}
                    <option value="{{ book._id }}">{{ book.title }}</option>
                {% endfor %}
            </select>
            <input type="submit">
        </form>
    {% endif %}
{% endblock %}