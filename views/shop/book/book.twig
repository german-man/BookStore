{% extends 'layout.twig' %}

{% block body %}
    <link rel="stylesheet" type="text/css" href="/css/book.css">
    <div class="content-wrap">
        <div class="content">
            <article class="post_item post_item_single post_item_product">
                <nav class="book-nav">
                    <a href="http://booklovers.ancorathemes.com/">Home</a>&nbsp;/&nbsp;<a
                            href="http://booklovers.ancorathemes.com/shop/">Shop</a>&nbsp;/&nbsp;<a
                            href="http://booklovers.ancorathemes.com/product-category/cookbooks/">Cookbooks</a>&nbsp;/&nbsp;It’s
                    a really strange story
                </nav>
                <div class="main-wrap">
                    <div class="top-wrap">
                        <div class="image-wrap">
                            <a href="http://booklovers.ancorathemes.com/shop/its-a-really-strange-story/#"
                               class="icon-wrap"><img src="/images/search.svg">
                            </a>
                            <a href="" class="book-image">
                                <img src="/img/{{book.img}}">
                            </a>
                        </div>
                        <div class="info">
                            <h1 class="product-title entry-title">{{ book.title }}</h1>
                            <p class="price">${{book.price[0]}}.{{ book.price[1] }}</p>
                            <p>{{ book.description }}</p>
                            <form class="cart" id="add_product_form"
                                  action="/basket/add"
                                  method="post">
                                <label class="screen-reader-text" for="quantity_606dcd6830d18">It’s a really
                                    strange story quantity</label>
                                <input for="add_product_form" type="text" name="product" value="{{ book.book_id }}" hidden>
                                <input for="add_product_form" type="number" class="input-text qty text"
                                       step="1" min="1" max="" name="quantity" value="1" title="Qty" size="4"
                                       placeholder="" inputmode="numeric">
                                <button for="add_product_form" type="submit" name="add-to-cart" value="251"
                                        class="single_add_to_cart_button button alt">Add to cart
                                </button>
                            </form>
                            <div class="product_meta">
                                <p class="posted_in">Categories:
                                    <a class="tag"
                                       href="http://booklovers.ancorathemes.com/product-category/best-sellers/">Best
                                        sellers</a>,
                                    <a class="tag"
                                       href="http://booklovers.ancorathemes.com/product-category/cookbooks/">Cookbooks</a>,
                                    <a class="tag"
                                       href="http://booklovers.ancorathemes.com/product-category/new-releases/"
                                       rel="tag">New releases</a></p>
                                <p class="tagged_as">Tag:
                                    <a class="tag"
                                       href="http://booklovers.ancorathemes.com/product-tag/childrens-books/"
                                       rel="tag">Children's Books</a></p>
                                <p class="product_id">Product ID: <span>251</span></p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <script type="text/javascript">
                            jQuery(document).ready(function($) {
                                $('.description_tab').on('click',function () {
                                    $('.description_tab').addClass('active');
                                    $('.reviews_tab').removeClass('active');
                                    $('.description-panel').show();
                                    $('.review-panel').hide();

                                    return false;
                                });
                                $('.reviews_tab').on('click',function () {
                                    $('.description_tab').removeClass('active');
                                    $('.reviews_tab').addClass('active');
                                    $('.description-panel').hide();
                                    $('.review-panel').show();

                                    return false;
                                });
                            });
                        </script>
                        <div class="tabs-wrap">
                            <ul class="tab-wrap">
                                <li class="description_tab alt-tab active" id="tab-title-description" role="tab"
                                    aria-controls="tab-description">
                                    Description
                                </li>
                                <li class="reviews_tab alt-tab" id="tab-title-reviews" role="tab"
                                    aria-controls="tab-reviews">
                                    Reviews ({{ reviews|length }})
                                </li>
                            </ul>
                            <div class="description-panel"
                                 id="tab-description" role="tabpanel" aria-labelledby="tab-title-description"
                                 style="display: block;">
                                <h2>Description</h2>
                                <p>{{ book.description }}</p>
                            </div>
                            <div class="review-panel"
                                 id="tab-reviews" role="tabpanel" aria-labelledby="tab-title-reviews"
                                 style="display: none;">
                                <div id="reviews" class="woocommerce-Reviews">
                                    <div id="comments">
                                        <h2 class="woocommerce-Reviews-title">
                                            Reviews </h2>
                                        {% if reviews is empty %}
                                        <p class="woocommerce-noreviews">There are no reviews yet.</p>
                                        {% else %}
                                            {% for review in reviews %}
                                                <div>
                                                    <h6>{{ review.username }}</h6>
                                                    <p>{{ review.text }}</p>
                                                </div>
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                    <div id="review_form_wrapper">
                                        <div id="review_form">
                                            <div id="respond" class="comment-respond">
                                                {% if huser is defined %}
                                                <form action="http://booklovers.ancorathemes.com/wp-comments-post.php"
                                                      method="post" id="commentform" class="comment-form">
                                                    <div class="comment-form-rating"><label for="rating">Your
                                                            rating</label>
                                                       <select name="rating" id="rating" required="">
                                                            <option value="">Rate…</option>
                                                            <option value="5">Perfect</option>
                                                            <option value="4">Good</option>
                                                            <option value="3">Average</option>
                                                            <option value="2">Not that bad</option>
                                                            <option value="1">Very poor</option>
                                                        </select></div>
                                                    <p class="comment-form-comment"><label for="comment">Your
                                                            review<textarea id="comment" name="comment" required=""></textarea>
                                                        </label>
                                                    </p>
                                                    <p class="form-submit">
                                                        <input name="submit" type="submit" class="submit" value="Submit">
                                                    </p>
                                                </form>
                                                    {% else %}
                                                    <a href="/login">Авторизируйтесь чтобы оставить отзыв</a>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="clear"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <section class="related-products-wrap">
                        <h2>Related products</h2>
                        <ul class="related-products">
                            {% for book in books %}
                                {% include './item.twig' with book %}
                            {% endfor %}
                        </ul>
                    </section>
                </div>
            </article>
        </div>
    </div>
{% endblock %}