{% extends 'layout.twig' %}

{% block body %}
    <style>.block{
            display:block;
        }</style>
    <div class="content_wrap">
        <form method="post" action="/my/redact">
            <label class="block">Имя пользователя:<br><input type="text" name="username" value="{{ username }}" minlength="5" maxlength="40" placeholder="username" pattern="^[a-zA-Z]+$" required/></label>
            <label class="block">Почта:<br><input type="email" name="email" value="{{ email }}" maxlength="100" placeholder="email" required/></label>
            <label class="block">Телефон:<br><input type="tel" name="phone" value="{{ phone }}" placeholder="+7 (900) 123-45-67" pattern="^((8|\+7)[\- ]?)?\(\d{3}\)[\- ]?\d{3}[\- ]?\d{2}[\- ]?\d{2}$" required/></label>
            <input type="submit" value="Сохранить"/>
        </form><br>
        <form method="post" action="/my/save_password">
            <label class="block">Новый пароль:<br><input type="password" name="password" minlength="8" maxlength="40" required/></label>
            <input type="submit" value="Изменить">
        </form>
    </div>
{% endblock %}